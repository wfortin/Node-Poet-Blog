extends layout

block content
  div.post
    h1
      a(href=post.url)
        = post.title
    div.dateBox Posted 
      span.date #{post.date.getMonth()+1}-#{post.date.getDate()}-#{post.date.getFullYear()}
    div.post.content
      != post.content
    div.tags
      - each tag in post.tags
        a(href=tagUrl(tag))
          span.label.label-info #{tag}
    h3 Comments
    .fb-comments(data-href='#{post.url}', data-width='470', data-num-posts='10')

